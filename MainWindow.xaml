<Window x:Class="_2021._02._01_wpf_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2021._02._01_wpf_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50 "></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="1">
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12 12 0 0" Width="25" Height="25" Click="MygtukasAtimtis" Content="-"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12 12 0 0" Width="25" Height="25" Click="MygtukasSudetis" Content="+"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12 12 0 0" Width="25" Height="25" Click="MygtukasDalyba" Content="/"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12 12 0 0" Width="25" Height="25" Click="MygtukasDaugyba" Content="*"/>
        </WrapPanel>
        <WrapPanel Grid.Row="0">
            <TextBox x:Name="pirmasSkaicius" Margin="12 12 0 0" Width ="150" Text=""></TextBox>
            <TextBox x:Name="antrasSkaicius" Margin="30 12 0 0" Width ="150" Text=""></TextBox>
            <TextBlock x:Name ="rezultatas" FontWeight="Bold"  Margin="30 12 0 0" Width="100" Height="20" Canvas.Left="60" InkCanvas.Top="40" >rezultatas</TextBlock >
        </WrapPanel>
    </Grid>
</Window>
